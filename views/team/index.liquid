{% layout 'layout.liquid' %}
{% block content %}
  <div>
    <h2 class="display-6">All Teams</h2>
    <div class="row">
        <h3><a href="/team/new" class="btn btn-primary ms-3">New Team</a> <a href="/team/search" class="btn btn-primary ms-3">Search</a></h3>
      {% for team in teams %}
        <div class="card ms-3" style="width: 18rem;">
          <h4 class="card-header">Team {{ team.name }}</h4>
          <div class="card-body">
            <ul>
            <li>{{ team.pokemon1 }}</li>    
            <li>{{ team.pokemon2 }}</li>
            <li>{{ team.pokemon3 }}</li>
            <li>{{ team.pokemon4 }}</li>
            <li>{{ team.pokemon5 }}</li>
            <li>{{ team.pokemon6 }}</li>
            </ul>
            <a href="/team/{{ team.id }}" class="btn btn-info">
              View {{ team.name }}
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}