{% layout 'layout.liquid' %}
{% block content %}
  <div>
    <h2 class="display-6">All Teams</h2>
    <div class="row">
      {% for team in teams %}
        <div class="card ms-3" style="width: 16rem;">
          <h4 class="card-header">Team "{{ team.name }}"</h4>
          <div class="card-body">
          <h6>{{ team.description }}</h6>
          <div class="grid">
          {% for pokemon in team.pokemons %}
            <img src="{{ pokemon.sprite }}" alt="">
            {% endfor %}
            <a href="/team/{{ team.id }}" class="btn btn-info">
              View {{ team.name }}
            </a>
          </div>
        </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}