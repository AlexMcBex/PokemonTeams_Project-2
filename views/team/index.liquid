{% layout 'layout.liquid' %}
{% block content %}
  <div>
    <h2 class="display-6">All Teams</h2>
    <div class="row">
        <h3><a href="/team/new" class="btn btn-primary ms-3">New Team</a> <a href="/team/search" class="btn btn-primary ms-3">Search</a></h3>
      {% for team in teams %}
        <div class="card" style="width: 18rem;">
          <h4 class="card-header">{{ team.name }}</h4>
          <div class="card-body">
            <h5 class="card-title">
              LVL: {{ team.level }}
            </h5>
            <p class="card-text">
              Type: {{ team.type1 }} {{ team.type2 }}
            </p>
            <a href="/team/{{ team.id }}" class="btn btn-info">
              View {{ team.name }}
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}