{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
  
  <h2 class="mt-1" style="display: inline;">Choose the Pokemon to add to the Team "{{ team.name }}" <br><i>{{ firstlist }} - {{ pokemonNext }}</i></h2> 
  {% if offNum > 0 %} 
    <a href="/team/{{ team.id }}/addPokemon/?offset={{ pokemonPre }}&limit=27" class="btn btn-warning ms-3" style="width: 200px; ">Previous Page</a>
    {% else %}
    <div class="btn ms-3" style="width: 200px; background: rgb(180, 168, 103)">Previous Page</div>
    {% endif %}
    <a href="/team/{{ team.id }}/addPokemon/?offset={{ pokemonNext }}&limit=27" class="btn btn-warning ms-3" style="width: 200px; ">Next Page</a><br>
    <a href="/team/{{ team.id }}/addPokemon/type" class="btn btn-primary ms-3 mt-3" style="width: 200px; ">Filter by Type</a>
  <div class="row mt-3">
    {% for pkmn in pokemonData %}
      <div class="card ps-0 ms-3 mb-3" style="width: 16rem; border-radius: 200px; padding-left: -1px; height: 16rem; text-align: center;">
        
        <a style="text-transform: capitalize; text-decoration: none;" href="/team/{{ team.id }}/addPokemon/{{ pkmn.name }}" class="">
        <h4 class="pt-3 mt-0 mb-0 ms-0"style="text-transform: capitalize; border-radius: 200px 200px 0 0; background-color: red; color: white; height: 8rem; width: 16rem; border-bottom: 25px solid black">{{ forloop.index | plus: offNum }} <br>{{ pkmn.name }} </h4>
        <div class="card-body">
             <img class="mt-0 mb-0"src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/{{ forloop.index | plus: offNum }}.png" alt="N/A">
          
             </div>
             </a>
      </div>
    {% endfor %}
    <br>
    </div>
</div>
        {% endblock %}
        <a style="text-transform: capitalize;" href="" class="btn btn-info pt-0">