{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm">
    <form action="/team/{{ team.id }}?_method=PUT" method="POST">
    <fieldset>
        <legend>Create New Team</legend>
        <hr>
        <label class="form-label">Name: </label>
        <input 
            type="text" 
            name="name" 
            placeholder="Name of the Team"
            class="form-control"
            value="{{ team.name }}"
            required
        >
        <label class="form-label">Pokemon n. 1:</label>
        <input 
            type="text" 
            name="pokemon1" 
            placeholder="enter 1st Pokemon" 
            class="form-control"
            value="{{ team.pokemon1 }}"
            required
        >
        <label class="form-label">Pokemon n. 2:</label>
        <input 
            type="text" 
            name="pokemon2" 
            placeholder="enter 2nd Pokemon" 
            class="form-control"
            value="{{ team.pokemon2 }}"
        >
        <label class="form-label">Pokemon n. 3:</label>
        <input 
            type="text" 
            name="pokemon3" 
            placeholder="enter 3rd Pokemon" 
            class="form-control"
            value="{{ team.pokemon3 }}"
        >
        <label class="form-label">Pokemon n. 4:</label>
        <input 
            type="text" 
            name="pokemon4" 
            placeholder="enter 4th Pokemon" 
            class="form-control"
            value="{{ team.pokemon4 }}"
        >
        <label class="form-label">Pokemon n. 5:</label>
        <input 
            type="text" 
            name="pokemon5" 
            placeholder="enter 5th Pokemon" 
            class="form-control"
            value="{{ team.pokemon5 }}"
        >
        <label class="form-label">Pokemon n. 6:</label>
        <input 
            type="text" 
            name="pokemon6" 
            placeholder="enter 6th Pokemon" 
            class="form-control"
            value="{{ team.pokemon6 }}"
        >
        
    </fieldset>
        <input type="submit" value="Edit Team" class="mt-3 btn btn-success">
        
        <input type="reset" value="Reset" class="mt-3 btn btn-warning">
    </form>
</div>
{% endblock %}