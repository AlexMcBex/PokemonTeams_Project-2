{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm">
    <form action="/team/{{ team.id }}?_method=PUT" method="POST">
    <fieldset>
        <legend>Create New Team</legend>
        <hr>
        <label class="form-label">Name: </label>
        <input 
            type="text" 
            name="name" 
            placeholder="Name of the Team"
            class="form-control"
            value="{{ team.name }}"
            required
        >
        <label class="form-label">Description:</label>
        <input 
            type="text" 
            name="description" 
            placeholder="Brief description of the Team" 
            class="form-control"
            value="{{ team.description }}"
            required
        >
    </fieldset>
        <input type="submit" value="Edit Team" class="mt-3 btn btn-success">
        
        <input type="reset" value="Reset" class="mt-3 btn btn-warning">
    </form>
</div>
{% endblock %}