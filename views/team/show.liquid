{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>Team {{ team.name }} </h2>
        <h5>{{ team.description }}</h5>
            {% if team.owner == userId %}
            <h3><a href="/team/{{ team.id }}/edit" class="btn btn-primary">Edit {{ team.name }}</a> 
            <form action="/team/{{ team.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete Team" class="btn btn-danger"></h3>
                {% endif  %}
            </form>
        </div>
    </article>
    <small>Team id: {{ team.id }} </small>
</div>
{% endblock %}