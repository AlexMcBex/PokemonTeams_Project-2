{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-md">

  <h2 class="mt-1" style="display: inline;">Choose the Pokemon to add to the Team "<i>{{ team.name }} </i>"</h2> 
  <div class="row">
      <h2> Results found for "<i>{{ nameTBF }}</i> "</h2> 
      <form action="/team/{{ team.id }}/search?{{ nameTBF }}" method="GET">
        <input style="width: 160px; height: 40px; border-radius: 3px;"  class="ms-3 mt-3" type="text" name="name" placeholder="Search by Name..."><input type="submit" class="btn btn-success" value="Search" style="width: 80px; height: 40px"></form>
      <a href="/team/{{ team.id }}/addPokemon/type" class="btn btn-primary ms-3 mt-3" style="width: 200px; ">Filter by Type</a>
      <a href="/team/{{ team.id }}/region" class="btn btn-primary ms-3 mt-3" style="width: 200px; ">Filter by Region</a>
      </div>
      <div class="row mt-3">

      {% for pkmn in filtered %}
        <div class="card ps-0 ms-3 mb-3" style="width: 16rem; border-radius: 200px; padding-left: -1px; height: 16rem; text-align: center; ">

          <a style="text-transform: capitalize; text-decoration: none; border-radius: 200px 200px 200px 200px;" href="/team/{{ team.id }}/addPokemon/{{ pkmn.name }}">

          <h4 class="pt-3 mt-0 mb-0 ms-0"style="text-transform: capitalize; border-radius: 200px 200px 0 0; background-color: red; color: white; height: 8rem; width: 16rem; border-bottom: 25px solid black">{{ indexes[forloop.index0] }} <br>{{ pkmn.name }} </h4>

          <div class="card-body">
               <img class="mt-0 mb-0"src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/{{ indexes[forloop.index0] }}.png" alt="N/A">
            
               </div>
               </a>
        </div>
      {% endfor %}

  </div>
{% endblock %}