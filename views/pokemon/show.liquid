{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm">
    <article>
        <h1 class="mt-3" style="text-transform: capitalize;"> <img style="border: 2px solid black; border-radius:100px;"src="{{ pokemonData.sprites.front_default }}" alt="sprite"> <i>{{ pokemonData.id}} -</i>
             {{ pokemonData.name}}
            </h1> 
        <img src="{{ pokemonData.sprites.other.official-artwork.front_default }}" alt="artwork">
        <h3 style="text-transform: capitalize">Type: {{ pokemonData.types.0.type.name }}  {{ pokemonData.types.1.type.name }}</h3>
        {% if pokemon.team %}
        <a href="/team/{{ pokemon.team }}" class="btn btn-primary">View Pokemon's Team</a>
        {% endif %}
        {% if pokemon.owner == userId %}
        <div class="btn-group">
            <form action="/pokemon/{{ teamId }}/{{ pokemon.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete Pokemon" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
    
    <small>Owned by: 
        {% if pokemon.owner == userId %}
        You â˜†
        {% else  %}
        {{ pokemon.owner.username }}
       {% endif %}
        </small><br>
    <small>PKMN id: {{ pokemon.id }}</small>
</div>
{% endblock %}