{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h1 class="mt-3 " style="text-transform: capitalize;"> <img class =" {{ pokemonData.types.0.type.name }}"style="border: 2px solid black; border-radius:20px;"src="{{ pokemonData.sprites.front_default }}" alt="no-sprite"> <i>{{ pokemonData.id}} -</i>
             {{ pokemonData.name}}
            </h1> 
            
        <img src="{{ pokemonData.sprites.other.official-artwork.front_default }}" alt="artwork">
        <h3 style="text-transform: capitalize;">Type: {{ pokemonData.types.0.type.name }}  {{ pokemonData.types.1.type.name }}</h3>
        {% if pokemon.owner == userId %}
        <div class="btn-group">

            <a href="/pokemon/{{ pokemon.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/pokemon/{{ pokemon.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger"> 
            </form>
        </div>
        {% endif %}
    </article>
    <a href="/pokemon/Dex/{{ pokemonPre }}"  class="btn btn-warning"><--- Previous</a>
    <a href="/pokemon/Dex/{{ pokemonNext }}"  class="btn btn-warning">Next ---> </a>
</div>

{% endblock %}